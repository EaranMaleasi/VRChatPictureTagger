<Page
    x:Class="VRChatPictureTagger.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VRChatPictureTagger.Views">
    <StackPanel Spacing="5">
        <TextBlock Text="Picture search paths:" />
        <ListBox
            Height="300"
            ItemsSource="{Binding SearchFolders}"
            SelectedItem="{Binding SelectedSearchPath}" />
        <Button Command="{Binding AddSearchPathCommand}" Content="Add new Path" />
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Use back navigation" />
            <ToggleSwitch IsOn="{Binding DontSearchVrcFolder}" />
        </StackPanel>
    </StackPanel>
</Page>
